nav.navbar.navbar-expand-lg.navbar-light.bg-light

    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon

    div.collapse.navbar-collapse
        div.nav.navbar-nav.navbar-brand.d-flex.w-50.mr-auto
            div.nav-item
                a.nav-link(href='/') Home
            div.nav-item
                a.nav-link(href='/explore') Explore
            div.nav-item
                a.nav-link(href='/about') About

        div.nav.navbar-nav.mx-auto.w-100.justify-content-center
            if (!user)
                div.nav-item
                    a.nav-link.navbar-brand(href='/') Name Pending
            else
                div.nav-item
                    a.nav-link.navbar-brand(href="/user")= user.username

        div.nav.navbar-nav.mx-auto.w-50.justify-content-end
            if (!user)
                div.nav-item
                    a.nav-link(href="/auth/signup") Register
                div.nav-item
                    a.nav-link(href="/auth/login") Login
            else
                div.nav-item
                    a#logout.nav-link(href='#') Logout
