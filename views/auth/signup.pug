include ../layout

block content

    div.col-sm-6.col-sm-offset-3
        h1 <span class="fa fa-sign-in"></span> Signup

        div
            span#message.alert.alert-danger

            form
                div.form-group
                    label Email
                    input#username.form-control(type="text" name="username")

                div.form-group
                    label Password
                    input#password.form-control(type="password" name="password")

                button#signup.btn.btn-warning.btn-lg(type="button") Signup

            hr

            p Already have an account? <a href="/auth/login">Login</a>
            p Or go <a href="/">home</a>
