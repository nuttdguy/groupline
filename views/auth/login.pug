include ../layout

div.row
    div.col-sm-6.col-sm-offset-3
        h1 <span class="fa fa-sign-in"></span> Login

        div
            span#err-message.alert.alert-danger

            form
                div.form-group
                    label Email
                    input#username.form-control(type="text" name="username")

                div.form-group
                    label Password
                    input#password.form-control(type="password" name="password")

                button#login.btn.btn-warning.btn-lg(type="button") Login

            hr

            p Don't have an account? <a href="/auth/signup">Sign up</a>
            p Or go <a href="/">home</a>
