extends ./layout

//- include navbar

//- Title for now
block content
    h1(style="text-align: center")=activities.title
    br
    div.row.justify-content-center
        span#failure.alert.alert-danger
        span#success.alert.alert-success

    div.row.justify-content-center
        //- First column set for image alon e
        div.col-sm-4
            img.img-fluid(src="../img/testimg.png")
            //- Shouldn't show anything YET
            img.img-fluid(src="#{activity.ActivityImage.imageUrl}")
            div.categories
            p Tags:
            each category in activities.ActivityCategories
                button.btn.btn-outline-primary(href="#")=category.categoryName
        
        //- Second column for details; underneath are buttons
        div.col-sm-6
            div.row
                table.table.table-bordered
                    thead
                        th(colspan="2") Details
                    tbody
                        tr
                            th(scope="row") Start Date
                            td= activities.startDate
                        tr
                            th(scope="row") End Date
                            td= activities.endDate
                        tr
                            th(scope="row") Min Participants
                            td= activities.minActor
                        tr
                            th(scope="row") Max Participants
                            td= activities.maxActor
            //- All buttons here!
            div.row
                //- form.add-favorite.form-inline(data-id=activities.activity_id)
                //-    button.btn.btn-outline-primary(type="submit") Add to favorite!
                //- TEMPORARY -- YOU CAN CONVERT YOUR CODE TO USE AJAX
                p= Testingtesting
                form.add-favorite.form-inline(
                    method="POST"
                    action="/user/favorite/"+activities.activityId
                    data-id=activities.activityId)
                    button.btn.btn-outline-primary(type="submit") Favorite

    hr.style1
    
    //- Probably have a bulk of the information.
    div.row.justify-content-center
        //- Trying to center
        div.col-9
            p= activities.summary
    
                
